{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "lib": [
      "ES2018",
      "ES2020"
    ],
    "removeComments": true,
    "sourceMap": false,
    "noEmit": false,
    "allowJs": false,
    "outDir": "./.next/nest",
    "baseUrl": "./",
    "isolatedModules": false,
    "experimentalDecorators": true
  },
  "include": [
    "ormconfig.ts",
    "apps/portal/src/**/*.entity.ts",
    "apps/portal/lib/types/*.ts",
    "libs/config/src/config.service.ts",
    "typings/global.d.ts"
  ],
  "exclude": [
    ".next",
    "node_modules",
    "__tests__",
    "__mocks__",
    "**/*.spec.*",
    "**/*.test.*",
    "jest.setup.ts",
    ".local"
  ]
}
