{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "sourceMap": true,
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "stripInternal": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@app/portal": [
        "apps/portal/src"
      ],
      "@app/portal/*": [
        "apps/portal/src/*"
      ],
      "@app/synch": [
        "apps/synch/src"
      ],
      "@app/synch/*": [
        "apps/synch/src/*"
      ],
      "@app/soap": [
        "libs/soap/src"
      ],
      "@app/soap/*": [
        "libs/soap/src/*"
      ],
      "@app/config": [
        "libs/config/src"
      ],
      "@app/config/*": [
        "libs/config/src/*"
      ],
      "@app/ldap": [
        "libs/ldap/src"
      ],
      "@app/ldap/*": [
        "libs/ldap/src/*"
      ],
      "@app/logger": [
        "libs/logger/src"
      ],
      "@app/logger/*": [
        "libs/logger/src/*"
      ],
      "@app/image": [
        "libs/image/src"
      ],
      "@app/image/*": [
        "libs/image/src/*"
      ],
      "@app/logging.interceptor": [
        "libs/logging.interceptor/src"
      ],
      "@app/logging.interceptor/*": [
        "libs/logging.interceptor/src/*"
      ],
      "@app/cache.interceptor": [
        "libs/cache.interceptor/src"
      ],
      "@app/cache.interceptor/*": [
        "libs/cache.interceptor/src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    ".next",
    "node_modules",
    "__tests__",
    "__mocks__",
    "**/*.spec.*",
    "**/*.test.*",
    "jest.setup.ts",
    "target"
  ]
}
