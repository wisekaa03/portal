{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2018"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "sourceMap": true,
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "stripInternal": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@public": [
        "public"
      ],
      "@public/*": [
        "public/*"
      ],
      "@front/layout": [
        "apps/portal/layout"
      ],
      "@front/layout/*": [
        "apps/portal/layout/*"
      ],
      "@lib": [
        "apps/portal/lib"
      ],
      "@lib/*": [
        "apps/portal/lib/*"
      ],
      "@back": [
        "apps/portal/src"
      ],
      "@back/*": [
        "apps/portal/src/*"
      ],
      "@front/components": [
        "apps/portal/components"
      ],
      "@front/components/*": [
        "apps/portal/components/*"
      ],
      "@front/pages": [
        "apps/portal/pages"
      ],
      "@front/pages/*": [
        "apps/portal/pages/*"
      ],
      "@app/images": [
        "public/images"
      ],
      "@app/images/*": [
        "public/images/*"
      ],
      "@app/portal": [
        "apps/portal/src"
      ],
      "@app/portal/*": [
        "apps/portal/src/*"
      ],
      "@app/sync": [
        "apps/sync/src"
      ],
      "@app/sync/*": [
        "apps/sync/src/*"
      ],
      "@app/soap": [
        "libs/soap/src"
      ],
      "@app/soap/*": [
        "libs/soap/src/*"
      ],
      "@app/config": [
        "libs/config/src"
      ],
      "@app/config/*": [
        "libs/config/src/*"
      ],
      "@app/ldap": [
        "libs/ldap/src"
      ],
      "@app/ldap/*": [
        "libs/ldap/src/*"
      ],
      "@app/logger": [
        "libs/logger/src"
      ],
      "@app/logger/*": [
        "libs/logger/src/*"
      ],
      "@app/image": [
        "libs/image/src"
      ],
      "@app/image/*": [
        "libs/image/src/*"
      ],
      "@app/logging.interceptor": [
        "libs/logging.interceptor/src"
      ],
      "@app/logging.interceptor/*": [
        "libs/logging.interceptor/src/*"
      ],
      "@app/cache.interceptor": [
        "libs/cache.interceptor/src"
      ],
      "@app/cache.interceptor/*": [
        "libs/cache.interceptor/src/*"
      ]
    }
  },
  "include": [
    "typings/global.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    ".next",
    "node_modules",
    "__tests__",
    "__mocks__",
    "**/*.spec.*",
    "**/*.test.*",
    "jest.setup.ts",
    ".local"
  ]
}
